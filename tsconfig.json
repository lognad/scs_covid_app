{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "allowJs": true,
    "paths": {
      "ol": [
        "node_modules/ol/src"
      ],
      "ol/*": [
        "node_modules/ol/src/*"
      ]
    },
    "checkJs": true
  },
  "include": [
    "**/*.js",
    "node_modules/ol/**/*.js"
  ],
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
